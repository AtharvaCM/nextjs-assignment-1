{
  "extends": ["next/core-web-vitals", "plugin:import/resolver"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@/components/*", "./src/components/*"],
          ["@/pages/*", "./pages"],
          ["@/styles/*", "./src/styles/*"]
        ],
        "extensions": [".js", ".jsx", ".svg", ".png"]
      }
    }
  },
  "plugins": ["resolver-alias", "import"]
}
